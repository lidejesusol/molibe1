bool ehPrimo(int numero){
    if(numero<=1) return false;
    for(int i = 2; i * i <= numero; i ++){
        if(numero % i == 0){
            return false;
        }
    }
    return true;
}

void main(){
    int numero = 17; //Altere para o numero desejado;
    if(ehPrimo(numero)){
        print('$numero é um numero primo.');
    }else {
        print('$numero não é um numero primo.');

    }
    
}